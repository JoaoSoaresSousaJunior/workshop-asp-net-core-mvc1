@model IEnumerable<SalesWebMvc.Models.SalesRecords>
@{
    ViewData["Title"] = "Pesquisa Simples";
}

<h2>@ViewData["Title"]</h2>

<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
                <label for="minDate">De</label>
                <input type="date" class="form-control" name="minDate" value=@ViewData["minDate"] />
            </div>
            <div class="form-group">
                <label for="maxDate">Até</label>
                <input type="date" class="form-control" name="maxDate" value=@ViewData["maxDate"] />
            </div>
        </form>
    </div>
</nav>
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Total das Vendas = @Model.Sum(obj => obj.Quantidade).ToString("F2")</h3>
    </div>
    <div class="panel-body">
      <table class=" table table-striped table-hover">
          <thead>
              <tr class="success" >
                  <th>ID</th>
                  <th>Data</th>
                  <th>Vendedor</th>
                  <th>Departamento</th>
                  <th>Quantidade Vendida</th>
                  <th>Status</th>
              </tr>
          </thead>
          <tbody>
              @foreach (var item in Model)
              {
                  <tr>
                      <td>
                          @Html.DisplayFor(modelItem => item.Id)
                      </td>
                      <td>
                          @Html.DisplayFor(modelItem => item.DataVenda)
                      </td>
                      <td>
                          @Html.DisplayFor(modelItem => item.Sellers.Nome)
                      </td>
                      <td>
                          @Html.DisplayFor(modelItem => item.Sellers.Departments.Descricao)
                      </td>
                      <td>
                          @Html.DisplayFor(modelItem => item.Quantidade)
                      </td>
                      <td>
                          @Html.DisplayFor(modelItem => item.SaleStatus)
                      </td>
                  </tr>

              }
          </tbody>
      </table>
    </div>

</div>