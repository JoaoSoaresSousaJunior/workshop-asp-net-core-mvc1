@model SalesWebMvc.Models.Sellers

@{
    ViewData["Title"] = "Vendedor";
}

<hr />
<h3>Tem certeza que quer Excluir esse Vendedor?</h3>
<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nome
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt>
            E-mail
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            Data de Nascimento
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DataNascimento)
        </dd>
        <dt>
            Salário Base
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SalarioBase)
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir"  class="btn btn-danger" />
        <a asp-action="Index">Retorne à lista</a>

</form>

</div>

